<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:gravity="center">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="-60dp"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/forget_password_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="16dp"
        android:text="@string/forget_password_instruction" />

    <EditText
        android:id="@+id/emailAddForgotPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_password_instruction"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:drawablePadding="13dp"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="20sp"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/resetPassword"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailAddForgotPassword"
        android:layout_gravity="center"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="16dp"
        android:text="@string/reset_password"
        android:visibility="visible" />

    <TextView
        android:id="@+id/backToLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetPassword"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="3dp"
        android:text="@string/back_to_login_page"
        android:textAlignment="center"
        android:textSize="17sp" />


</RelativeLayout>